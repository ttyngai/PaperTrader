<%- include('../partials/header') %>
<div>
  <h1>Portfolio: <%= portfolio.name %></h1>
  <h3>Holdings</h3>
  <table id="list">
    <thead>
      <tr>
        <th>Ticker</th>
        <th>Shares</th>
        <th>Price</th>
        <th>% Change</th>
        <th>P/L Day</th>
        <th>P/L %</th>
        <th>P/L Open</th>
        <th>Purchased Price</th>
      </tr>
    </thead>
    <tbody>
      <% holdings.forEach(function(h) { %>
      <tr>
        <td><%= h.ticker %></td>
        <td><%= h.shares %></td>
        <!-- <td><%= h.purchasedPrice %></td> -->
      </tr>
      <% }); %>
    </tbody>
  </table>

  <h3>Transactions</h3>
  <table id="list">
    <thead>
      <tr>
        <th>Ticker</th>
        <th>Shares</th>
        <th>Purchased Price</th>
        <th>Transaction $</th>
      </tr>
    </thead>
    <tbody>
      <% portfolio.transactions.forEach(function(t) { %>
      <tr>
        <td><%= t.ticker %></td>
        <td><%= t.shares %></td>
        <td>$<%= t.price %></td>
        <td>$<%= (t.shares*t.price).toFixed(2) %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
