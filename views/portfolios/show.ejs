<%- include('../partials/header') %>
<div class="portfolioContent">
  <div class="portfolioSections">
    <h1><%= portfolio.name %></h1>
    <td><a href="/portfolios/<%= portfolio._id %>/edit">Edit</a></td>
    <h3 class="portfolioSections">Holdings</h3>
  </div>

  <% if (prices[0]){%>
  <!--  -->
  <table class="holdingsList">
    <thead>
      <tr class="portfolioList portfolioListTitle">
        <th class="tickerLeft tickerTitle">Stock</th>
        <th>Share</th>
        <th>Price</th>
        <th>%Chng</th>
        <th>%Profit</th>
        <th>$Profit</th>
        <th>AvgPrice</th>
      </tr>
    </thead>
    <tbody>
      <% prices[0].forEach(function(p) { %>
      <tr class="portfolioList">
        <td class="tickerLeft">
          <form class="tickerForm" action="/stocks/<%= p._id %>">
            <input type="submit" class="tickerButton" value="<%= p.symbol %>" />
          </form>
        </td>

        <td><%= p.shares %></td>
        <td>$<%=p.regularMarketPrice %></td>
        <td><%= p.regularMarketChangePercent.toFixed(2) %>%</td>
        <td>
          <%=
          ((Math.abs(p.shares)/p.shares)*((p.regularMarketPrice-p.avgPrice)/p.avgPrice)*100).toFixed(2)%>%
        </td>
        <td>
          $<%= ((p.regularMarketPrice - p.avgPrice)*p.shares).toFixed(2) %>
        </td>
        <td>$<%= p.avgPrice.toFixed(2) %></td>
      </tr>
      <% }); %>
    </tbody>
    <%} else{%>

    <h3>No Holdings</h3>

    <%}%>
  </table>
  <!--  -->
  <div class="portfolioSections">
    <h3>Transactions (NEED TO ADD NOTE BUTTON)</h3>
    <% if (portfolio.transactions){%>
  </div>

  <!--  -->

  <table class="holdingsList">
    <thead>
      <tr class="portfolioList portfolioListTitle">
        <th>Date</th>
        <th class="tickerLeft tickerTitle">Stock</th>
        <th>Shares</th>
        <th>PurchasePrice</th>
        <th>Cost</th>
      </tr>
    </thead>

    <tbody>
      <% portfolio.transactions.forEach(function(t) { %>
      <tr class="portfolioList">
        <td><%= t.createdAt.toLocaleDateString() %></td>
        <td class="tickerLeft tickerTitle"><%= t.ticker %></td>
        <td><%= t.shares %></td>
        <td>$<%= t.price %></td>
        <td>$<%= (t.shares*t.price).toFixed(2) %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <!--  -->

  <%} else{%>

  <h3>No Transactions</h3>

  <%}%>
</div>

<%- include('../partials/footer') %>
