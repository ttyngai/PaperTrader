<%- include('../partials/header') %>

<div>
  <form id="searchForm" action="/stocks" method="POST">
    <input id="search" type="text" name="ticker" placeholder="Search"/>
    <input type="submit" value="Add" />
  </form>

  <div>
    <table id="watchListContent">
      <thead>
        <tr id="stockListBottom">
          <th class="tickerLeft">Ticker</th>
          <th>%Chng</th>
          <th>StockPrice</th>
          <th>MktOpen</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% stocks.forEach(function(s) {if (!s.hide) { %>
        <tr id="eachStock">
          <td class="tickerLeft">
            <a class=" ticker" href="/stocks/<%= s._id %>"><%= s.symbol %></a>
          </td class="stockListRight">

          <td class="stockListRight <%=(s.regularMarketChangePercent>0)?'stockGreen': ''%> <%=(s.regularMarketChangePercent<0)?'stockRed': ''%>"><%= s.regularMarketChangePercent.toFixed(2) %>%</td>
          <td class="stockListRight">$<%= s.regularMarketPrice.toFixed(2) %></td>
          <td class="stockListRight">$<%= s.regularMarketOpen.toFixed(2) %></td>

          <td>
            <form action="/stocks/<%= s._id %>?_method=UPDATE" method="POST">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
        <% }}); %>
      </tbody>
    </table>
  </div>
</div>
<%- include('../partials/footer') %>
